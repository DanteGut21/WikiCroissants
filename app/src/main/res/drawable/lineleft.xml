<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo completo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#03A9F4"/>
        </shape>
    </item>
    <!-- Inset para simular el borde izquierdo -->
    <item android:left="8dp" android:top="0dp" android:right="0dp" android:bottom="0dp"> <!-- Ajusta el valor de android:left para controlar el grosor del borde -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Color del borde -->
        </shape>
    </item>
</layer-list>